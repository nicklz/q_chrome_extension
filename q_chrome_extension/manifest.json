{
  "manifest_version": 3,
  "name": "Nexus Platforms - [Q] Browser Extension",
  "short_name": "Nexus [Q]",
  "version": "5.1",
  "description": "Nexus Platforms - [Q] Browser Extension - Complete AI service automation system. Self rewriting codebase.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "windows",
    "scripting",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.svg",
        "images/*.png",
        "images/*.jpg",
        "images/*.webp"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["styles.css"],
      "js": ["core/QCoreContent.js"],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self';"
  }
}
